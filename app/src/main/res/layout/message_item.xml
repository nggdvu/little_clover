<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/absoluteWhite"
    android:id="@+id/homeItem"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:id="@+id/avatarFrame"
                app:cardCornerRadius="32dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/anh2"
                    android:id="@+id/avatar"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/avatarFrame"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyen Diep Vu"
                    android:id="@+id/nameTxt"
                    android:fontFamily="@font/lexendbold"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/avtFrame"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingStart="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nggdvu@gmail.com"
                    android:id="@+id/emailTxt"
                    android:fontFamily="@font/lexendmedium"
                    android:textSize="14dp"
                    android:maxLines="1"
                    android:textColor="@color/gray"
                    app:layout_constraintStart_toEndOf="@id/avtFrame"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingStart="16dp"
                    android:paddingTop="4dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:text="M"
                android:id="@+id/unseenMessageTxt"
                android:textSize="12dp"
                android:fontFamily="@font/lexendmedium"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/dot"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>